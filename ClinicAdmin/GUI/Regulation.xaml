<Window x:Class="ClinicAdmin.GUI.Regulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ClinicAdmin.GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="700"
        Width="470"
        Title="Thêm bệnh nhân mới"
        Loaded="Window_Loaded"
        Icon="/Assets/Icon/Icon.ico">
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0"
                             EndPoint="0.5,1">
            <GradientStop Color="#68b2a0"
                          Offset="0" />
            <GradientStop Color="#2C6975"
                          Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Margin="50">
            <Border Background="White"
                    CornerRadius="5">
                <DockPanel Margin="25 15"
                           LastChildFill="True">

                    <Label DockPanel.Dock="Top"
                           Content="Thay đổi quy định"
                           FontSize="36"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Left"
                           FontWeight="Bold" />

                    <Border DockPanel.Dock="Top"
                            Background="{DynamicResource TertiaryIconColor}"
                            CornerRadius="5"
                            Height="10"
                            Width="150"
                            HorizontalAlignment="Left"
                            Margin="0 0 0 20" />

                    <Grid DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.ColumnSpan="3"
                                    Grid.Row="0"
                                    Orientation="Vertical">

                            <Label Content="Bệnh nhân tối đa trong ngày"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"></Label>
                            <TextBox x:Name="txbMaxPatient"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="20"
                                     Padding="15 10"
                                     Margin="0 0 0 10"
                                     BorderBrush="#68b2a0"></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Column="0"
                                    Grid.Row="1"
                                    Orientation="Vertical"
                                    VerticalAlignment="Top"
                                    Margin="4 0 0 0">

                        </StackPanel>
                        <StackPanel Grid.ColumnSpan="3"
                                    Grid.Row="2"
                                    Orientation="Vertical">

                            <Label Content="Phí khám bệnh"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"></Label>
                            <TextBox x:Name="txbChinicFee"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="20"
                                     Padding="15 10"
                                     Margin="0 0 0 250"
                                     BorderBrush="#68b2a0"></TextBox>
                        </StackPanel>
                    </Grid>
                    <StackPanel DockPanel.Dock="Bottom"
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                Margin="0 15"
                                HorizontalAlignment="Right">
                        <Button Grid.Column="0"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Foreground="#f0723e"
                                BorderBrush="#f0723e"
                                Margin="0 0 8 0"
                                Width="140"
                                Height="45"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                ToolTip="MaterialDesignOutlinedButton"
                                Content="Hủy" 
                                Click="Cancel_Click"/>
                        <Button Content="Lưu thay đổi"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="150"
                                Height="45"
                                Background="#68b2a0"
                                Foreground="White" Click="ChangeButton_Click"></Button>
                    </StackPanel>
                </DockPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
